<Window
    x:Class="ShFLY.SMGS.SMGS_View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SMGS_View"
    Width="230.45"
    Height="206.574">
    <Grid>
        <Button
            x:Name="button"
            Width="200"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding LoadSmgsCommand}"
            Content="Загрузить СМГС из файла БЖД" />
        <Button
            x:Name="Serrial"
            Width="200"
            Margin="10,35,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding SerializeSmgsCommand}"
            Content="Сохранить СМГС в БД" />
        <Label
            Name="label1"
            Width="200"
            Height="106"
            Margin="10,60,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="{Binding Count, UpdateSourceTrigger=PropertyChanged}"
            FontSize="40" />
    </Grid>
</Window>
 